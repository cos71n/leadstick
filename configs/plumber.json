      "validation": {
        "required": true
      }
    },
    {
      "id": "urgency",
      "type": "select",
      "question": "How urgent is this?",
      "options": [
        "Emergency - Need help now!",
        "Today if possible",
        "Within this week",
        "Not urgent"
      ],
      "validation": {
        "required": true
      }
    },
    {
      "id": "contact",
      "type": "contact",
      "question": "Great! Let's get your contact details"
    }
